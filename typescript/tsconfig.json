{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    ".prettierrc.js"
  ]
}
